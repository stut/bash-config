set number
set relativenumber
filetype plugin indent on
" show existing tab with 2 spaces width
set tabstop=2
" when indenting with '>', use 2 spaces width
set shiftwidth=2
" On pressing tab, insert 2 spaces
set expandtab
" turn word wrapping off
set tw=0
set foldmethod=indent
set foldnestmax=10
set nofoldenable
set foldlevel=2

